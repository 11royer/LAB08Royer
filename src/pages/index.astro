---
import CounterButton from '../components/CounterButton';
---

<style>
  .center-Button {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    height: 100vh;
  }

  .increment-button {
    background-color: #0022ff;
    color: #0df1cf;
    border: none;
    padding: 15px 30px;
    cursor: pointer;
    font-size: 18px;
    border-radius: 8px;
  }

  .increment-button:hover {
    background-color: #0021b3;
  }
</style>

<div class="center-Button">
  <h1>BOTON QUE INCREMENTA EN 50</h1>
  <CounterButton client:load />
</div>
